    <!--== Theme Base ==-->
    <style name="Base.Theme.Tachiyomi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Disallow "Force dark theme" -->
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>

        <!-- Theme Colors -->
